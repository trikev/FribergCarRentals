<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Friberg Car Rentals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FribergCarRentals.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="styles.css">


    <link rel="icon" type="image/x-icon" href="/faviconv2.ico">

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/faviconv2.ico" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Startsida</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="ListAllCars">Bilar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Booking" asp-action="CreateBooking">Boka en bil</a>
                        </li>

                    </ul>
                    <div class="ms-auto">
                        <div class="dropdown">
                            <button type="button" class="btn mainBtn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                Logga in
                            </button>
                            <form asp-action="Login" asp-controller="Account" class="dropdown-menu p-4 dropdown-login-form">
                                <div class="mb-3">
                                    <h5>Logga in</h5>
                                    <label for="Email">E-postadress</label>
                                    <input type="email" name="Email" class="form-control" id="Email" placeholder="Ange e-post" />
                                </div>
                                <div class="mb-">
                                    <label for="Password">Lösenord</label>
                                    <input type="password" id="password" name="Password" class="form-control" placeholder="Ange lösenord" />
                                </div>
                                <br />
                                <button type="submit" class="btn mainBtn">Logga in</button>
                                <p style="margin-bottom: 0; margin-top: 1rem;">Ingen konto? </p>
                                <a asp-action="CreateUserAccount" asp-controller="User" class="a-link">Skapa ett konto kostnadsfritt</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="padding-bottom: 2rem;">
        @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FribergCarRentals - <a asp-controller="Home" asp-action="Index" class="a-link">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)
            @await Html.PartialAsync("_ValidationSCriptsPartial");
</body>
</html>
